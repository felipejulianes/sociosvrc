  <img class="logo-bottom" src="logo vrc.png" alt="Logo VRC inferior">

  <script>
    function getEmbajadorFromURL() {
      const params = new URLSearchParams(window.location.search);
      return params.get("embajador");
    }

    async function cargarCampania() {
      const embajador = getEmbajadorFromURL();
      const errorDiv = document.getElementById("error");
      const botonesDiv = document.getElementById("botones");

      try {
        const response = await fetch("campanias.json");
        const data = await response.json();

        if (!data[embajador]) {
          errorDiv.textContent = "Embajador no encontrado.";
          return;
        }

        const campania = data[embajador];
        botonesDiv.innerHTML = "";

        campania.links.forEach(link => {
          const a = document.createElement("a");
          a.className = "btn";
          a.href = link.url;
          a.textContent = link.monto;
          a.target = "_blank";
          botonesDiv.appendChild(a);
        });
      } catch (error) {
        errorDiv.textContent = "Error cargando la campaña.";
        console.error(error);
      }
    }

    cargarCampania();
  </script>
